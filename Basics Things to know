/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// pass by refrene and pass by value 

#include<iostream>

using namespace std;

int sum(int n1, int n2)
{
    return n1+n2;
}

int changevalue(int &n1,int &n2)
{
    n1+=100;
    n2-=100;
    return n1,n2;
} 

int main()
{
    int n1,n2;
    cout<<"Enter the 2 numbers :-";
    cin>>n1>>n2;
    int res=sum(n1,n2);
    cout << res << endl;
    int change=changevalue(n1,n2);
    cout<<change <<endl;
    return 0;
}

