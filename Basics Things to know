/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//for loop
#include<iostream>

using namespace std;

int main()
{
    int i;

    for(i=0;i<10;i++)
    {
        cout<<"hi"<<endl;
    }

}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

//while loop

#include<iostream>

using namespace std;

int main()
{
    int i=0;
    while( i < 10)
    {
        cout<<i<<endl;
        i++;
    }
    i=0;
    do
    {
        cout<<i;
        i++;
    } while (i<12);

}

